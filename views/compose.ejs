<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" name="postTitle" id="postTitle" class="form-control" />
  </div>
  <div class="form-group">
    <label for="postMessage">Post</label>
    <textarea
      name="postMessage"
      id="postMessage"
      cols="30"
      rows="10"
      class="form-control"
    ></textarea>
  </div>
  <button type="submit" name="btn" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer"); -%>
